<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Content</th>
      <th scope="col">Time</th>
    </tr>
  </thead>
  <tbody>
    <% @notifications.each_with_index do |notification, index| %>
      <tr>
        <th scope="row"><%= index+1 %></th>
        <td><%= notification.body %></td>
        <td><%= notification.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
