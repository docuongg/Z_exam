<div class="row">
  <div class="col-md-4">
    <ul class="list-unstyled list-inline mb-0 d-flex">
      <h3 class="my-3"><%= @exam.name %></h3>
    </ul>
    <hr class="mt-0 mb-4">
    <div id="countdown">
      <ul>
        <li class="a"><span class="b" id="hours"></span>Hours</li>
        <li class="a"><span class="b" id="minutes"></span>Minutes</li>
        <li class="a"><span class="b" id="seconds"></span>Seconds</li>
      </ul>
    </div>
    <h3 class="my-3">Exam Details</h3>
    <ul>
      <li>Dolor Sit Amet</li>
      <li>Timeout : 
        <span class="b" id="timeout"><%= @exam.timeout %></span>
        minutes
      </li>
      <li>Consectetur</li>
      <li>Adipiscing Elit</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_tag mark_exam_path(:id => "#{@exam.id}") do %>
      <div class="container mb-5">
        <% @questions.each_with_index do |question, index| %>
          <div class="row">
            <div class="col-12">
              <p class="fw-bold mt-5">
                <%= index+1 %>. <%= question.title %>
              </p>
              <div class="row">
                <% question.options.each do |option| %>
                  <div class="form-check col-6">
                    <input class="form-check-input" type="radio" name="<%= question.id %>" value="<%= option.id %>" id="flexRadioDefault<%= option.id %>">
                    <label class="form-check-label" for="flexRadioDefault<%= option.id %>">
                      <%= option.title %>
                    </label>
                    <%# <%= check_box_tag :username , class:"form-check-input"%>
                    <%# <%= label :username, option.title ,class:"form-check-label"%>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        <br/>
        <div class="row">
          <div class="col-12">
            <div style="z-index: 1; width: 150px;">
              <button type="submit" class="btn btn-outline-primary d-flex justify-content-center">Submit</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
