<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% if @exam.image.blank? %>
        <img src=<%= @exam.thumbnail_url %> class="img-fluid img-thumbnail w-100" />
      <% else %>
        <%= image_tag @exam.image, class:"img-fluid img-thumbnail w-100" %>
      <% end %>
    </div>
    <div class="col-md-8">
      <ul class="list-unstyled list-inline mb-0 d-flex">
        <h3 class="my-3"><%= @exam.name %></h3>
        <li class="chip bg-primary text-white me-0 m-3 rounded p-2 my-3 "><%= @exam.tag.name%></li>
      </ul>
      <p><%= @exam.description %></p>
      <hr class="mt-0 mb-4">
      <h3 class="my-3">Exam Details</h3>
      <ul>
        <li>Dolor Sit Amet</li>
        <li>Timeout : <%= @exam.timeout %> minutes</li>
        <li>Consectetur</li>
        <li>Adipiscing Elit</li>
      </ul>
      <hr class="mt-0 mb-4">
      <h3 class="my-3">Questions</h3>
      <div class="container">
        <% @exam.questions.each_with_index do |question, index| %>
          <div class="row">
            <div class="col-12">
              <p class="fw-bold mt-2">
                <%= index+1 %>. <%= question.title %>
              </p>
              <div class="row">
                <% question.options.each do |option| %>
                  <div class="form-check col-6 ">
                    <input class="form-check-input" type="radio" value="" id="flexCheckDefault" disabled>
                    <label class="form-check-label" for="flexCheckDefault" 
                        <% if option.is_correct == true %>
                            style="color:green;" 
                        <% end %>>
                      <%= option.title%>
                    </label>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
