<% if @exams %>
  <section class="h-100 gradient-custom-2">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-lg-12 col-xl-12">
          <h3>Result of Search</h3>
          <br/>
          <div class="digg_pagination">
            <%= will_paginate @exams, renderer: BootstrapPagination::Rails %>
          </div>
          <% @exams.each_slice(3) do |group|%>
            <div class="row g-3 " >
              <% group.each do |exam| %>
                <div class="col-4">
                  <div class="card">
                    <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                      <%= link_to exam_path(exam.id) do %>
                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                        <% if exam.image.blank? %>
                          <img src=<%= exam.thumbnail_url %> class="img-fluid img-thumbnail w-100" />
                        <% else %>
                          <%= image_tag exam.image, class:"img-fluid img-thumbnail w-100" %>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title font-weight-bold"><a><%= exam.name%>
                        </a></h5>
                      <ul class="list-unstyled list-inline mb-0 d-flex justify-content-between">
                        <div class="d-flex align-self-center">
                          <div class="list-inline-item me-0 p-1">
                            <i class="fas fa-star text-warning fa-xs"> </i>
                          </div>
                          <div class="list-inline-item me-0 p-1">
                            <i class="fas fa-star text-warning fa-xs"></i>
                          </div>
                          <div class="list-inline-item me-0 p-1">
                            <i class="fas fa-star text-warning fa-xs"></i>
                          </div>
                          <div class="list-inline-item me-0 p-1">
                            <i class="fas fa-star text-warning fa-xs"></i>
                          </div>
                          <div class="list-inline-item p-1">
                            <i class="fas fa-star-half-alt text-warning fa-xs"></i>
                          </div>
                        </div>
                        <li class="chip bg-primary text-white me-0 rounded p-2"><%= exam.tag.name%></li>
                      </ul>
                      <hr class="my-4" />
                      <p class="card-text">
                        <%= exam.description%>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </section>
<% else %>
