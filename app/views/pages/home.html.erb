<br/>
<br/>
<div class="container">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Home</button>
    </li>
    <% if user_signed_in? %>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Completed</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Suggestion</button>
      </li>
    <%end%>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <section class="h-100 gradient-custom-2">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-12 col-xl-12">
              <h3>New Examinations</h3>
              <br/>
              <div class="row g-3 " >
                <div class="owl-carousel loop">
                  <% @new_exams.each do |exam| %>
                    <div class="col mb-3">
                      <img src= <%= exam.thumbnail_url%> class="w-100 rounded-3">
                      <h4><%= exam.name%></h4>
                      <p><%= exam.description%></p>
                      <p>Tag : <%= Tag.find(exam.tag_id).name%></p>
                    </div>
                  <% end %>
                </div>
              </div>
              <h3>Popular Examinations</h3>
              <br/>
              <div class="row g-3">
                <div class="owl-carousel loop">
                  <% @popular_exams.each do |exam| %>
                    <div class="col mb-3">
                      <img src="https://mdbcdn.b-cdn.net/img/Photos/Lightbox/Original/img%20(112).webp"
                  alt="image 1" class="w-100 rounded-3">
                      <h4><%= exam.name%></h4>
                      <p><%= exam.description%></p>
                      <p>Tag : <%= Tag.find(exam.tag_id).name%></p>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    <% if user_signed_in? %>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <section class="h-100 gradient-custom-2">
          <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col col-lg-12 col-xl-12">
                <h3>Completed Exam</h3>
                <br/>
                <div class="row g-3 " >
                  <div class="owl-carousel loop">
                    <% @completed_exams.each do |exam| %>
                      <div class="col mb-3">
                        <img src=<%= exam.thumbnail_url%>
                  alt="image 1" class="w-100 rounded-3">
                        <h4><%= Exam.find(exam.exam_id).name%></h4>
                        <p><%= exam.score%></p>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
      <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
        <section class="h-100 gradient-custom-2">
          <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col col-lg-12 col-xl-12">
                <h3>Suggestion Exam</h3>
                <br/>
                <div class="row g-3 " >
                  <div class="owl-carousel loop">
                    <% @suggestion_exams.each do |exam| %>
                      <div class="col mb-3">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/Lightbox/Original/img%20(112).webp"
                  alt="image 1" class="w-100 rounded-3">
                        <h4><%= exam.name%></h4>
                        <p><%= exam.description%></p>
                        <p>Tag : <%= Tag.find(exam.tag_id).name%></p>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    <% end %>
  </div>
</div>
